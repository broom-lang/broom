    -- } ?

    type eff s = (|State : t s);

    fun run thunk state = match thunk ! [
    |Â value -> [| state -> {state, value}]
    | effect (`State 'Get) k -> [| state -> (k state) state]
    |Â effect (`State ('Set state)) k -> [| _ -> k ! state ]
