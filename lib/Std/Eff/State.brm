    eval : (e, s, a @ () -> e with (|State : t s) ! v, s) -> (() -> e ! v);
    exec : (e, s, a @ () -> e with (|State : t s) ! v, s) -> (() -> e ! s);
} = {
    extends effect {
        Get : s @ => s;
        Set : s @ s => {|};
    };
