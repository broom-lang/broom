State : {|
    extends effect {|
        Get : s => s;
        Set : s => s -> ();
    };

    type eff s = (|State : t s);

    run : (e \ State, s, a) => ((() -! e with eff s -> v), s) -!e-> {state : s; value : v};
    eval : (e \ State, s, a) => ((() -! e with eff s -> v), s) -!e-> v;
    exec : (e \ State, s, a) => ((() -! e with eff s -> v), s) -!e-> s;
} = {
    extends effect {
        Get : s => s;
        Set : s => s -> ();
    };
