%name BroomLexer;

%defs (
    structure Tokens = BroomTokens
    type lex_result = Tokens.token
    fun eof () = Tokens.EOF
);

val => (Tokens.VAL);
do  => (Tokens.DO);

"=" => (Tokens.EQ);

[a-zA-Z]+ => (Tokens.ID (Name.fromString yytext));

[0-9]+ => (Tokens.INT (valOf (Int.fromString yytext)));

" " | \n | \r | \t => (continue ());

